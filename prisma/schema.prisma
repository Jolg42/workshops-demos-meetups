datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id          String   @id @default(uuid())
  heading     String
  content     String
  isPublished Boolean
  tags        String[]
  authors     User[]
}

model User {
  id       String @id @default(uuid())
  username String @unique
  email    String @unique
  posts    Post[]
}
